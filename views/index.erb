<div class="mois">
  <% @m.each do |key,value| %>
    
    <% i = 1; j = 1; k = 1 %>
    
    <div class="nom_mois">
      <%= value[0] %>
    </div>

    <div class="semaine">
      <% @d.each do |d| %>
        <div class="jour">
          <%= d %>
        </div>
      <% end %>
    </div>

    
    <% while i < value[2] %>
      <% if j == 1 %>
        <div class="semaine">
      <% end %>
      <div class="jour">
        -
      </div>
      <% i += 1; j += 1 %>
    <% end %>

    
    <% while k <= value[1] %>
      
      <% if j == 1 || j % 7 == 1 %>
        <div class="semaine">
      <% end %>
      
      <a href="/reservation/">
        <div class="jour">
          <%= k %>
        </div>
      </a>
      
      <% if j % 7 == 0 %>
        </div>
      <% end %>
      
      <% j += 1; k += 1 %>
    
    <% end %>
    
    <% if j % 7 != 1 %>
        </div>
    <% end %>
    
  <% end %>
</div>


<% @intervenant.each do |i| %>

  <%= i.date %>
  <%= i.nom %>
  <%= i.prenom %>
  <%= i.email %>
  <%= i.telephone %>
  <%= i.description %>
  </br>
<% end %>

